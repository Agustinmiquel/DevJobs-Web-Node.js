<main class="lista-candidatos">
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">Nombre:</p>
                    <p class="nombre">{{nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">E-mail:</p>
                    <p class="nombre">{{email}}</p>
                </div>
                <div class="caja">
                    <a href="/uploads/cv/{{cv}}" class="btn btnverde2">Ver CV</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay candidatos para mostrar</p>
    
    {{/if}}
</main>