<main class="contenedor">
    <form action="/vacantes/nueva" method="POST" class="default-form">
        <h3>Informacion General</h3>
        

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: Node.js Developer" required>
        </div>

        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa contrata" required>
        </div>

        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ej: Argentina" required>
        </div>

        <div class="campo">
            <label>Salario</label>
            <input type="text" name="salario" placeholder="Pesos o dolares" required>
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                <option value="" disabled selected>--Selecciona--</option> 
                <option value="full-time">Full-Time</option>
                <option value="remoto">Remoto</option>
                <option value="por-proyecto">Por Proyecto</option>
            </select>
        </div>

        <h3>Descripcion del puesto</h3>

        <div class="campo descripcion">
            <label>Requisitos</label>
            <trix-editor input="x"></trix-editor>
            <input type="hidden" id="x" name="descripcion">
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>